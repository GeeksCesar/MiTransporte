<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tvNumberRuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="4"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/round_ruta"
            android:textColor="@color/princiaplGreen"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="7">

        <TextView
            android:id="@+id/tvNameRuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="RUTA # 6"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:id="@+id/tvLugaresRoute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvNameRuta"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="Canaima,Comuneros"
            android:textColor="@color/md_white_1000"/>

    </RelativeLayout>

</LinearLayout>